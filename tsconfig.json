{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "src/scripts/lib/types"
    ],
    "paths": {
      "app/*": [
        "src/scripts/game/*"
      ],
      "vendor/*": [
        "src/scripts/lib/js/*"
      ],
      "pixi-app-wrapper": [
        "src/scripts/lib/js/dacaher/pixi-app-wrapper"
      ],
      "pixi-assets-loader": [
        "src/scripts/lib/js/dacaher/pixi-assets-loader"
      ],
      "fpsmeter": [
        "src/scripts/lib/js/darsain/fpsmeter/fpsmeter"
      ],
      "screenfull": [
        "src/scripts/lib/js/sindresorhus/screenfull/screenfull"
      ],
      "eventemitter3": [
        "src/scripts/lib/js/primus/eventemitter3"
      ],
      "gsap": [
        "src/scripts/lib/js/greensock/greensock-js"
      ],
      "pixi-layers": [
        "src/scripts/lib/js/pixijs/pixi-layers/pixi-layers"
      ],
      "pixi-particles": [
        "src/scripts/lib/js/pixijs/pixi-particles/pixi-particles"
      ],
      "pixi-spine": [
        "src/scripts/lib/js/pixijs/pixi-spine/pixi-spine"
      ],
      "webfont": [
        "src/scripts/lib/js/pixijs/webfont-loader/webfont-loader"
      ],
      "pixi-filters": [
        "src/scripts/lib/js/pixijs/pixi-filters"
      ],
      "@pixi/filter-*": [
        "src/scripts/lib/js/pixijs/pixi-filters/filters/filter-*"
      ],
      "howler": [
        "src/scripts/lib/js/goldfire/howler.js"
      ],
      "typescript-collections/*": [
        "src/scripts/lib/js/basarat/typescript-collections/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "filesGlob": [
		"src/**/*.ts",
		"src/**/*.json"
	],
  "exclude": [
    "node_modules",
    "**/lib"
  ]
}